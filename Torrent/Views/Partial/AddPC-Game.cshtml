@using Torrent.ViewModels;
@using Core.Const;
@model AddTorrentViewModel

@using (Html.BeginForm("AddTorrent", "Torrent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        <fieldset style="width: 250px; float: left;">
            <legend> Game Info</legend>

            <div>
                <div class="editor-label">@Html.Label(CharacteristicConst.Name)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["1"], htmlAttributes: new { required = "required" })</div>              
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["1"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Genre)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["14"], htmlAttributes: new { required = "required" })</div>                 
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["14"])</div>
                </div>

                <div class="editor-label">@Html.LabelFor(model => model.Torrent.TorrentType)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.TorrentType, new { @Value = @Model.TorrentType, required = "required" })</div> 
                    <div>@Html.ValidationMessageFor(model => model.Torrent.TorrentType)</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Image)</div>
                <div class="editor-field">
                    <input type="file" name="image" id="image" required="required" />
                    <div>@Html.ValidationMessage("image")</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Developer)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["13"], htmlAttributes: new { required = "required" })</div>       
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["13"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Publisher)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["15"], htmlAttributes: new { required = "required" })</div>
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["15"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Release)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["3"], htmlAttributes: new { required = "required" })</div>
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["3"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.InterfaceLanguage)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["16"], htmlAttributes: new { required = "required" })</div>
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["16"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.SoundLanguage)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["17"], htmlAttributes: new { required = "required" })</div>
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["17"])</div>
                </div>

                <div class="editor-label">@Html.Label(CharacteristicConst.Description)</div>
                <div class="editor-field">
                    <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["9"], htmlAttributes: new { required = "required" })</div>
                    <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["9"])</div>
                </div>
            </div>
        </fieldset>

    <fieldset style="width: 250px; float: left; margin-left:10px">
        <legend> System Requirements</legend>
        <div>
            <div class="editor-label">@Html.Label(CharacteristicConst.OS)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["18"], htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["18"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.Processor)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["19"], htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["19"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.Memory)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["20"], htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["20"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.Graphics)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["21"], htmlAttributes: new { required = "required" })</div>            
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["21"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.DirectX)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["22"], htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["22"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.Network)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["23"], htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["23"])</div>
            </div>

            <div class="editor-label">@Html.Label(CharacteristicConst.Storage)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.Characteristics["24"], htmlAttributes: new { required = "required" })</div>  
                <div>@Html.ValidationMessageFor(model => model.Torrent.Characteristics["24"])</div>
            </div>
        </div>    
    </fieldset>


    <fieldset style="width: 250px; float: left; margin-left:10px">
        <legend> Torrent File</legend>
        <div>
            <div>@Html.Label("Path of Torrent file")</div>
            <div class="editor-field">
                <input type="file" name="torrentFile" id="torrentFile" required="required" />
                <div>@Html.ValidationMessage("torrentFile")</div>
            </div>

            <div class="editor-label">@Html.LabelFor(model => model.Torrent.TorrentFile.Size)</div>
            <div class="editor-field">
                <div>@Html.TextBoxFor(model => model.Torrent.TorrentFile.Size, htmlAttributes: new { required = "required" })</div>
                <div>@Html.ValidationMessageFor(model => model.Torrent.TorrentFile.Size)</div>
            </div>
        </div>
    </fieldset>


        <div style="clear:both"></div>

        <div>
            <input type="submit" value="Add" />
        </div>
}